rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // User content storage - users can only access their own files
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Capsule content storage - users can only access files from their own capsules
    match /capsules/{capsuleId}/{allPaths=**} {
      allow read, write: if request.auth != null && 
        request.auth.uid == firestore.get(/databases/(default)/documents/capsules/$(capsuleId)).data.userId;
    }
    
    // Public assets - read-only for all authenticated users
    match /public/{allPaths=**} {
      allow read: if request.auth != null;
    }
    
    // Admin storage - only accessible by admin users
    match /admin/{allPaths=**} {
      allow read, write: if request.auth != null && 
        request.auth.token.admin == true;
    }
  }
}
